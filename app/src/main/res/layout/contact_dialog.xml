<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/contact_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/twenty_dp"
        android:layout_marginStart="@dimen/twenty_dp"
        android:textSize="16sp"
        android:textColor="#000000"
        android:text="Sample Title">
    </com.google.android.material.textview.MaterialTextView>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/contact_dialog_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/contact_dialog_title"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/twenty_dp"
        android:layout_marginStart="@dimen/twenty_dp"
        android:textSize="16sp"
        style="@style/lawal_st_ne"
        android:text="@string/lawal_st_ne">
    </com.google.android.material.textview.MaterialTextView>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/contact_dialog_open_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/contact_dialog_address"
        app:layout_constraintLeft_toLeftOf="@id/contact_dialog_address"
        app:layout_constraintRight_toLeftOf="@+id/number"
        android:layout_marginLeft="@dimen/twenty_dp"
        android:layout_marginStart="@dimen/twenty_dp"
        android:src="@drawable/ic_open">
    </com.google.android.material.imageview.ShapeableImageView>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/contact_dialog_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/contact_dialog_open_button"
        app:layout_constraintBottom_toBottomOf="@+id/contact_dialog_open_button"
        android:layout_marginTop="5dp"
        app:layout_constraintRight_toRightOf="@id/contact_dialog_address"
        app:layout_constraintLeft_toRightOf="@+id/contact_dialog_open_button"
        android:textSize="16sp"
        style="@style/lawal_st_ne"
        android:text="@string/number_smaple">
    </com.google.android.material.textview.MaterialTextView>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/website"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/contact_dialog_number"
        android:layout_marginTop="30dp"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:textSize="16sp"
        style="@style/for_emergencies"
        android:text="Website">
    </com.google.android.material.textview.MaterialTextView>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/call_now"
        android:layout_width="150dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/contact_dialog_number"
        android:layout_marginTop="30dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="16sp"
        style="@style/call_now_text"
        android:background="@color/colorPrimaryDark"
        android:text="Call Now">
    </com.google.android.material.textview.MaterialTextView>


</androidx.constraintlayout.widget.ConstraintLayout>